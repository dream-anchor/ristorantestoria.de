RewriteEngine On

# ============================================
# 0. HTTPS + WWW Kanonisierung (SEO)
# ============================================
# Alle Anfragen auf https://www.ristorantestoria.de umleiten

# Schritt 1: Non-www zu www umleiten (immer sicher, da Host sich ändert)
RewriteCond %{HTTP_HOST} ^ristorantestoria\.de$ [NC]
RewriteRule ^(.*)$ https://www.ristorantestoria.de/$1 [R=301,L]

# Schritt 2: HTTP zu HTTPS nur wenn Proxy explizit http meldet
# (Vermeidet Loop wenn %{HTTPS} immer off ist und kein Header gesetzt)
RewriteCond %{HTTP:X-Forwarded-Proto} =http [NC]
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# ============================================
# 1. Spezielle Weiterleitungen (Query-String)
# ============================================
RewriteCond %{QUERY_STRING} ^page_id=2881$
RewriteRule ^$ /impressum? [R=301,L]

# ============================================
# 2. 301 Redirects für alte URLs (VOR dem SPA-Fallback!)
# ============================================
RewriteRule ^mittagsmenu$ /mittags-menu [R=301,L]
RewriteRule ^weihnachtsmenues$ /besondere-anlaesse/weihnachtsmenues [R=301,L]
RewriteRule ^silvesterparty$ /besondere-anlaesse/silvesterparty [R=301,L]
# Redirect für alte Subdomain-URL (mit Unterverzeichnissen)
RewriteRule ^ristorantestoria-de/(.*)$ /$1 [R=301,L]
RewriteRule ^ristorantestoria-de$ / [R=301,L]

# Legacy SEO URL redirects (shorter versions)
RewriteRule ^lunch-muenchen$ /lunch-muenchen-maxvorstadt [R=301,L]
RewriteRule ^eventlocation-muenchen$ /eventlocation-muenchen-maxvorstadt [R=301,L]

# ============================================
# 3. Trailing Slash Canonicalisierung (SEO)
# ============================================
# Entferne trailing slashes für konsistente URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^(.+)/$
RewriteRule ^(.+)/$ /$1 [R=301,L]

# ============================================
# 4. SSG + SPA-Routing (Prerendered Pages + React Router)
# ============================================
# Prüfe zuerst ob eine prerenderte .html Version existiert
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI}.html -f
RewriteRule ^(.+)$ $1.html [L]

# Handle language prefixes (en/, it/, fr/)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^/(en|it|fr)/(.+)$
RewriteCond %{DOCUMENT_ROOT}/%1/%2.html -f
RewriteRule ^(en|it|fr)/(.+)$ /$1/$2.html [L]

# Language root pages (e.g., /en, /it, /fr -> /en/index.html)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} ^/(en|it|fr)/?$
RewriteCond %{DOCUMENT_ROOT}/%1/index.html -f
RewriteRule ^(en|it|fr)/?$ /$1/index.html [L]

# Fallback auf SPA für dynamische Routen
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ /index.html [L]

# ============================================
# 4. MIME-Types für korrekte Dateiauslieferung
# ============================================
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType text/css .css
  AddType image/webp .webp
  AddType image/svg+xml .svg
  AddType font/woff2 .woff2
  AddType application/xml .xml
  AddType text/plain .txt
</IfModule>

# ============================================
# 5. GZIP-Komprimierung für bessere Performance
# ============================================
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json image/svg+xml
</IfModule>

# ============================================
# 6. Browser-Caching für statische Assets
# ============================================
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# ============================================
# 7. Erzwungene MIME-Types für spezifische Dateien
# ============================================
<FilesMatch "\.xml$">
  ForceType application/xml
</FilesMatch>

<IfModule mod_headers.c>
  <FilesMatch "sitemap\.xml$">
    Header set Content-Type "application/xml; charset=UTF-8"
  </FilesMatch>
</IfModule>